= form_for (@predictor) do |f|
  - if @predictor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@predictor.errors.count, "error")} prohibited this predictor from being saved:"
      %ul
        - @predictor.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :start_at
    = f.date_select :start_at
  .field
    = f.label :end_at
    = f.date_select :end_at
  .field
    = f.label :cost
    = f.number_field :cost  
  .actions
    = f.submit