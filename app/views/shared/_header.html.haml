%header
  %nav.top-bar{"data-topbar" => "", :role => "navigation"}
    %ul.title-area
      %li.name
        %h1= link_to t('app.name'), '#'
    %section.top-bar-section
      %ul.left
        %li.divider
        %li
          = link_to t('app.home'), root_path
        %li.divider
      %ul.right
        -if current_user.present?
          %li.divider
          %li.has-dropdown.header-text
            = current_user.email
            %ul.dropdown
              %li.active
                = link_to t('app.log_out'), destroy_user_session_path , method: :delete
        -else
          %li.active
            = link_to t('app.register'), new_user_session_path